{
  "compilerOptions": {
    "target": "ES2020",                         
    "module": "commonjs",                       
    "rootDir": ".",                           
    "outDir": "dist",                           
    "strict": true,                             
    "esModuleInterop": true,                    
    "allowSyntheticDefaultImports": true,       
    "skipLibCheck": true,                       
    "forceConsistentCasingInFileNames": true    
  },
  "include": ["."],
  "exclude": ["node_modules", "dist"]
}
